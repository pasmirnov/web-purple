{
    "extends": "airbnb",
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "allowImportExportEverywhere": true,
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "browser": true,
        "jest": true
    },
    "globals": {
        "fetch": true
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "linebreak-style": [
            "off"
        ],
        "max-len": [
            "warn",
            140
        ],
        "no-confusing-arrow": [
            "off"
        ],
        "no-use-before-define": [
            "error",
            {
                "functions": false,
                "classes": true
            }
        ],
        "no-underscore-dangle": [
            "off"
        ],
        "no-nested-ternary": [
            "off"
        ],
        "react/jsx-closing-bracket-location": [
            "warn",
            "after-props"
        ],
        "react/prop-types": "warn",
        "react/forbid-prop-types": ["warn", { "forbid": ["any"] }],
        "react/require-default-props": "off",
        "padded-blocks": "off",
        "arrow-parens": ["error", "as-needed"]
    }
}